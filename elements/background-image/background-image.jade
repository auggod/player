link(rel="import" href="../../bower_components/polymer/polymer.html")

dom-module(id="background-image")
  template
    style
      :stylus(minify=true)
        :host
          background-size 105%
          background-position 50% 50%
          background-repeat no-repeat
          position absolute
          height 100%
          width 100%
          top 0
          right 0
          bottom 0
          left 0         
    content

  script
    :livescript(minify=true)
      Polymer do
        is: 'background-image'
        properties: 
          path:
            type: String
            observer: '_pathChanged'
        _pathChanged: ->
          @style.backgroundImage = 'url(' + @path + ')'
